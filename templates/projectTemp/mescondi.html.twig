{% extends 'base.html.twig' %}
{% block body %}
<div class="breadcrumbs" data-aos="fade-in">
    <div class="container">
        <h2>Mes condidatures</h2>
    </div>
</div><!-- End Breadcrumbs -->

<!-- ======= ALL Section ======= -->
<section id="courses" class="courses">
    <div class="container" data-aos="fade-up">
        <div class="row" data-aos="zoom-in" data-aos-delay="100">
            <br>
            {% for c in condidature %}
                <div class="col-lg-4 col-md-6 d-flex align-items-stretch">
                    <div class="course-item">
                        <div class="course-content">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h4>Postul√© le :</h4>
                            </div>
                            <h3><a href="{{ path('app_detailProject', {'id': c.project.id}) }}">{{ c.project.titre}}</a></h3>
                            <br/>
                            <h4><center>{{ c.status}}</center></h4>
                            <br/>
                            <div class="btn-group">
                                <a href="{{ path('app_editC', {'id': c.id}) }}" class="btn btn-primary"> Modifier condidature </a>
                                <a href="{{ path('app_deleteCondidature', {'id': c.id}) }}" class="btn btn-danger ml-6"> Supprimer condidature </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
{% endblock %}
