  <script>
    $(document).ready(function () {
        // Keep track of the original projects HTML
        var originalProjectsHtml = $('#courses .row').html();

        $('#liveSearchInput').on('input', function () {
            var query = $(this).val();

            // Make an Ajax request to the Symfony controller
            $.ajax({
                url: '/live-search',
                method: 'GET',
                data: { query: query },
                success: function (data) {
                    displayResults(data);
                }
            });
        });

        function displayResults(results) {
            var projectsContainer = $('#courses .row');

            if (results.length > 0) {
                // If there are search results, replace the original projects with the search results
                projectsContainer.html('');

                $.each(results, function (index, result) {
    console.log(result); // Log the entire result object

    // Check if properties exist
    var categorie = result.categorie !== undefined ? result.categorie : 'N/A';
    var createdAt = result.createdAt !== undefined ? result.createdAt : 'N/A';

    var resultHtml = '<div class="col-lg-4 col-md-6 d-flex align-items-stretch">' +
                        '<div class="course-item">' +
                            '<div class="course-content">' +
                                '<div class="d-flex justify-content-between align-items-center mb-3">' +
                                    '<h4>' + categorie + '</h4>' +
                                '</div>' +
                                '<h3><a href="' + result.url + '">' + result.title + '</a></h3>' +
                                '<br/>' +
                                '<p><b>Ajouté le :</b> ' + createdAt + '</p>' +
                            '</div>' +
                        '</div>' +
                    '</div>';

    projectsContainer.append(resultHtml);
});
            } else {
                // If there are no search results, display a message and revert to the original projects HTML
                projectsContainer.html('<p>Aucun résultat n\'est trouvé!</p>' + originalProjectsHtml);
            }
        }
    });
</script>


