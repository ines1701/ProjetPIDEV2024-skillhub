</head>



 

  <main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <div class="breadcrumbs" data-aos="fade-in">
      <div class="container">
        <h2>Post your project</h2>
        <p>Post your project for freelancers! </p>
      </div>
    </div><!-- End Breadcrumbs -->

    <!-- ======= ADD Section ======= -->
    <section id="about" class="about">
      <div class="container" data-aos="fade-up">
        <div class="row">
          <div class="col-lg-6 order-1 order-lg-2" data-aos="fade-left" data-aos-delay="100">
            <img src="assets/img/about.jpg" class="img-fluid" alt="">
          </div>

          <!-- ======= FORMULAIRE Section ======= -->
          <div class="col-lg-6 pt-4 pt-lg-0 order-2 order-lg-1 content"> 
{{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
    <label for="inputText" class="col-sm-4 col-form-label">Titre du projet</label>
      <div class="col-sm-10">
        {{ form_widget(f.titre,{'attr':{'class':'form-control'}}) }}
      </div>
    {{ form_errors(f.titre,{'attr':{'class':'text-danger'}}) }}

    <label for="inputText" class="col-sm-4 col-form-label">Catégorie</label>
      <div class="col-sm-10">
        {{ form_widget(f.categorie,{'attr':{'class':'form-control'}}) }}
      </div>
    {{ form_errors(f.categorie,{'attr':{'class':'text-danger'}}) }}

    <label for="{{ f.periode.vars.id }}" class="col-sm-4 col-form-label">Période</label>
      <div class="col-sm-10">
        {{ form_widget(f.periode,{'attr':{'class':'form-control'}}) }}
      </div>
    {{ form_errors(f.periode,{'attr':{'class':'text-danger'}}) }}

    <label for="inputText" class="col-sm-4 col-form-label">Budget (en DT)</label>
      <div class="col-sm-10">
        {{ form_widget(f.budget,{'attr':{'class':'form-control'}}) }}
      </div>
    {{ form_errors(f.budget,{'attr':{'class':'text-danger'}}) }}

    <label for="{{ f.portee.vars.id }}" class="col-sm-4 col-form-label">Portée du projet</label>
      <div class="col-sm-10">
        {{ form_widget(f.portee,{'attr':{'class':'form-control'}}) }}
      </div>
    {{ form_errors(f.portee,{'attr':{'class':'text-danger'}}) }}

    <label for="inputText" class="col-sm-4 col-form-label">Description du projet</label>
      <div class="col-sm-10">
        {{ form_widget(f.description,{'attr':{'class':'form-control', 'rows':'5'}}) }}
      </div>
    {{ form_errors(f.description,{'attr':{'class':'text-danger'}}) }}

    <br/>

    <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center;color: #5fcf80">

                        {{ form_widget(f.ajouter,{'attr':{'class':'btn btn-primary'}}) }}
                    </div>
      {{ form_end(f) }}

          </div>
        </div>
      </div>
    </section><!-- End ADD Section -->

   
    
  </main><!-- End #main -->



  <div id="preloader"></div>
