{% extends 'base.html.twig' %}
{% block body %}
<div class="breadcrumbs" data-aos="fade-in">
      <div class="container">
        <h2>Mes projets</h2>


      </div>
    </div><!-- End Breadcrumbs -->

    <!-- ======= ALL Section ======= -->
    <section id="courses" class="courses">
    <div class="container" data-aos="fade-up">
        <div class="row" data-aos="zoom-in" data-aos-delay="100">
        <br>
            {% for project in projet %}
                <div class="col-lg-4 col-md-6 d-flex align-items-stretch">
                    <div class="course-item">
                        <div class="course-content">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h4>{{ project.categorie }}</h4>
                            </div>
                            <h3><a href="{{ path('app_condidatureproject', {'id': project.id})}}">{{ project.titre }}</a></h3>
                            <br/>
                            <p><b>Publi√© par : </b></p>
                            <div class="btn-group">
                                <a href="{{ path('app_edit', {'id': project.id}) }}" class="btn btn-primary"> Modifier </a>
                                <a href="{{ path('app_deleteFront', {'id': project.id}) }}" class="btn btn-danger ml-6"> Supprimer </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
{% endblock %}