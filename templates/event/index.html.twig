

{% block title %}LISTE DES EVENEMENTS{% endblock %}


{% block body %}
 
    <h1>LISTE DES EVENEMENTS</h1>
    

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Describ</th>
                <th>Lieu</th>
                <th>Date</th>
                <th>Image</th>
                 <th>Vidéo</th>
                <th>type</th>
              
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.id }}</td>
                <td>{{ event.titre }}</td>
                <td>{{ event.describ }}</td>
                <td>{{ event.lieu }}</td>
                <td>{{ event.date ? event.date|date('Y-m-d H:i:s') : '' }}</td>
                                 <td>
                    {% if event.image %}
                        <img src="{{ asset('images/affiche/' ~ event.image) }}" alt="Event Image" style="max-width: 100px;">
                    {% else %}
                        No Image
                    {% endif %}
                </td>


               <td> {# Affichage de la vidéo #}
                    {% if event.video %}
                        <video controls style="max-width: 100px;">
                            <source src="{{ asset('images/affiche/' ~ event.video) }}" type="video/mp4">
                            <!-- Ajoutez d'autres formats vidéo pris en charge si nécessaire -->
                        </video>
                    {% else %}
                        No Video
                    {% endif %}
                </td>


 

                 <td>{{ event.type }}</td>
              


                      <td>
                    <div class="btn-group" role="group" aria-label="Actions">
                        <form method="post" action="{{ path('app_event_edit', {'id': event.id}) }}" style="display: inline;">
                           <button type="submit" class="btn btn-primary btn-edit">Edit</button>
                        </form>
                        {% include 'event/_delete_form.html.twig' with { 'id': event.id }  %}
                    </div>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
