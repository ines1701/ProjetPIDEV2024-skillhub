<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Details</title>
    <style>
        .formation-group {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }
        
        .formation-box {
            background-color: #f8f8f8;
            border: 5px solid 	#9f9f9f;
            border-radius: 10px;
            padding: 10px;
            width: calc(30% - 20px);
            box-sizing: border-box;
            position: relative;
           
        }

        .edit-link {
            position: absolute;
            bottom: 30px;
            right: 10px;
        }
         .delete-link {
            position: absolute;
            bottom: 10px;
            right: 10px;
        }
         
           .add-button {
            position: absolute;
            top: 150px;
            right: 100px;
        }
           .add-buttonfront {
            position: absolute;
            top: 100px;
            right: 100px;
        }
    </style>
</head>
<body>
<div style="text-align: center; padding: 40px;">
    <h1>Les formations disponibles</h1>
    <a href="{{ path('app_Add') }}" class="add-button">Ajouter</a>
     <a href="{{ path('app_AfficheFront') }}" class="add-buttonfront">consulter la partie front</a>
</div>
<div style="text-align: center; padding: 40px;">
    {% set groupSize = 3 %}
    {% for i in 0..(formation|length-1)//groupSize %}
        <div class="formation-group">
            {% for j in 0..groupSize-1 %}
                {% set index = i * groupSize + j %}
                {% if index < formation|length %}
                    <div class="formation-box">
                    
                        <h2>{{ formation[index].titre }}</h2>
                        <p style="font-size: 25px;">{{ formation[index].categorie }}</p>
                        <p style="font-size: 18px;">{{ formation[index].tuteur }}</p>
                        <p>post√© le {{ formation[index].updated }}</p>
                        <a href="{{ path('formation_ressources', { 'id': formation[index].id }) }}">Ouvrir</a>
                        <a href="{{ path('app_edit', {'id': formation[index].id}) }}" class="edit-link">modifier</a>
                    <a href="{{ path('app_delete', {'id': formation[index].id}) }}" class="delete-link">supprimer</a>

                    </div>
                {% endif %}
            {% endfor %}
        </div>
    {% endfor %}
</div>
</body>
</html>
